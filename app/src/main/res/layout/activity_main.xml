<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sigta1"
    tools:context="com.example.guru.trackthebus.MainActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableLeft="@drawable/userser"
        android:background="@drawable/roundededit"
        android:layout_alignBottom="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:hint="USERNAME"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:drawableLeft="@drawable/reading"
        android:background="@drawable/roundededit"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="38dp"
        android:hint="BRANCH"
        android:textAlignment="center"
        android:textStyle="normal|bold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:id="@+id/editText4"
        android:background="@drawable/roundededit"
        android:drawableLeft="@drawable/schoolcalendar"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="36dp"
        android:hint="YEAR"
        android:textAlignment="center"
        android:textStyle="normal|bold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/roundededit"
        android:drawableLeft="@drawable/lockgp"
        android:id="@+id/editText5"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="33dp"
        android:hint="PASSWORD"
        android:textAlignment="center"
        android:textStyle="normal|bold"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:drawableLeft="@drawable/phonebook"
        android:background="@drawable/roundededit"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:textStyle="normal|bold"
        android:layout_marginTop="28dp"
        android:hint="PHONE"
        android:textAlignment="center"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/roundbutton"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <Button
        android:text="Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/roundbutton"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />
</RelativeLayout>
